{
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true,
		"useTranspileModule": true,
		"doTypeCheck": true,
		"forkChecker": true,
		"ignoreDiagnostics": []
	},
	"compilerOptions": {
		"outDir": "../dist/",
		"allowJs": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es2016"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		},
		"moduleResolution": "node"
	},
	"exclude": [
		"node_modules"
	]
}
